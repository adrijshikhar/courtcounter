<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/pointA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#1A237E"
                android:textSize="100sp" />

            <Button
                android:id="@+id/point3A"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="increase3"
                android:text="+3 point" />

            <Button
                android:id="@+id/point2A"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="increase2"
                android:text="+2 point" />

            <Button
                android:id="@+id/freeA"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="free"
                android:text="free throw"
                android:textAllCaps="true" />

        </LinearLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="1dp"
            android:layout_height="397dp"
            android:layout_marginTop="60sp"
            android:layout_marginBottom="40sp"
            android:background="#90909090" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/pointB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#1A237E"
                android:textSize="100sp" />

            <Button
                android:id="@+id/point3B"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="increase3"
                android:text="+3 point" />

            <Button
                android:id="@+id/point2B"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="increase2"
                android:text="+2 point" />

            <Button
                android:id="@+id/freeB"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:onClick="free"
                android:text="free throw"
                android:textAllCaps="true" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40sp"
        android:text="RESET"
        android:onClick="reset"
        android:textAllCaps="true" />
</RelativeLayout>